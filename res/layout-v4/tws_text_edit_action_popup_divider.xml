<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="horizontal"
    android:paddingBottom="0dip"
    android:paddingTop="0dip" >

    <!--android:background="@drawable/tws_button_attach_pop" :: not press effect is delete  -->
    <TextView
        android:id="@+id/menu_name"
        style="@style/TextAppearance.tws.Second.twsTextMediumLightBody"
        android:layout_width="60dp"
        android:layout_height="44dp"
        android:paddingLeft="2dip"
        android:paddingRight="2dip"
        android:gravity="center"
        android:textSize="@dimen/tws_Medium_TextSize" />

    <View
        android:id="@+id/menu_divider"
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:layout_marginTop="5dip"
        android:background="@null" 
        android:visibility="gone"/>

</LinearLayout>