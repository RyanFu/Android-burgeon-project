<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@id/picker_dialog_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tws_picker_dialog_btn_bg"
        android:clipChildren="false"
        android:visibility="gone" >

        <TextView
            android:id="@id/picker_dialog_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:minHeight="46dip"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:text="@string/picker_dialog_positive_text"
            android:textColor="@color/tws_text_blue"
            android:textSize="20dp" />
    </RelativeLayout>

    <com.rickdynasty.tws.core.widget.TimePicker
        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="234dip"
        android:layout_gravity="center_horizontal"
        android:calendarViewShown="false"
        android:paddingBottom="12dip"
        android:paddingTop="12dip"
        android:spinnersShown="true" />

</LinearLayout>