<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/tws_button_radius" />

            <gradient
                android:angle="135"
                android:endColor="#807FFF00"
                android:startColor="@color/green" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:shape="rectangle"
        android:top="2dp">
        <shape>
            <solid android:color="#407010" />

            <corners android:radius="@dimen/tws_button_radius" />
        </shape>
    </item>

</layer-list>