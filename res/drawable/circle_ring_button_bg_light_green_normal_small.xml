<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape
            android:innerRadius="22dp"
            android:shape="ring"
            android:thickness="2dp"
            android:useLevel="false" >
            <gradient
                android:angle="135"
                android:endColor="#807FFF00"
                android:startColor="@color/green" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="oval" >
            <solid android:color="@color/green_alpha_larger" />
        </shape>
    </item>

</layer-list>