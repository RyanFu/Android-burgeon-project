<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape
            android:shape="rectangle"
            android:width="2dp" >
            <corners android:radius="@dimen/tws_button_radius" />

            <gradient
                android:angle="135"
                android:endColor="#66E32B6C"
                android:startColor="#FFE32B6C" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:shape="rectangle"
        android:top="2dp">
        <shape>
            <solid android:color="#80E32B6C" />

            <corners android:radius="@dimen/tws_button_radius" />
        </shape>
    </item>

</layer-list>